body {
    font-family: 'SF Pro', Arial, sans-serif;
    color: #333;
    background-color: #fff;
}
header, footer {
    background-color: #f8f8f8;
}
.hero {
    background-image: url('path-to-your-image.jpg');
    background-size: cover;
    background-position: center;
    height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}
.hero h1 {
    font-size: 48px;
    color: #333;
}
.product {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 20px;
}
.product img {
    width: 100%;
    max-width: 400px;
    height: auto;
    border: 1px solid #ddd;
}
.product h2 {
    font-size: 24px;
    margin: 10px 0;
}
.cta-button {
    background-color: #007aff;
    color: #fff;
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
}
